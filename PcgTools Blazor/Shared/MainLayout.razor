            <MudIconButton Icon="@Icons.Material.Outlined.ViewList" />
            <MudIconButton Icon="@Icons.Material.Outlined.Info" />
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Outlined.AutoAwesome" />
        </MudToolBar>
    </MudPaper>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
